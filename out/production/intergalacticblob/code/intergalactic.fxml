<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane"
        fx:controller="code.Controller"
        xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="startButton" text="Start" AnchorPane.topAnchor="300" AnchorPane.leftAnchor="350"
            textFill="black" onAction="#onStartButton">
        <font>
            <Font size="80.0"/>
        </font>
    </Button>
    <Button fx:id="pauseButton" text="Pause" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
            onAction="#onPauseButton">
        <font>
            <Font size="18.0"/>
        </font>
    </Button>
</AnchorPane>