<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<AnchorPane fx:id="anchorPane"
        fx:controller="code.Controller"
        xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="startButton" text="Start" AnchorPane.topAnchor="300" AnchorPane.leftAnchor="350"
            textFill="black" onAction="#onStartButton">
        <font>
            <Font size="80.0"/>
        </font>
    </Button>
    <Button fx:id="highScoresButton" text="High Scores" AnchorPane.topAnchor="500" AnchorPane.leftAnchor="300"
            textFill="black" onAction="#onHighScoresButton">
        <font>
            <Font size="60.0"/>
        </font>
    </Button>
    <Label text="Controls:
                Enter or Tab: Make Blob Jump
                A: Increase Velocity to the Left
                D: Increase Velocity to the Right
                P: Pause (or Resume)"
          AnchorPane.topAnchor="100" wrapText="true"/>
</AnchorPane>