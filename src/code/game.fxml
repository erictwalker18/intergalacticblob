<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<AnchorPane fx:id="anchorPane"
        fx:controller="code.GameController"
        xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="startButton" text="Start" AnchorPane.topAnchor="300" AnchorPane.leftAnchor="350"
            textFill="black" onAction="#onStartButton">
        <font>
            <Font size="80.0"/>
        </font>
    </Button>
    <Button fx:id="highScoresButton" text="High Scores" AnchorPane.topAnchor="500" AnchorPane.leftAnchor="300"
            textFill="black" onAction="#onHighScoresButton">
        <font>
            <Font size="60.0"/>
        </font>
    </Button>
    <Label AnchorPane.topAnchor="100" AnchorPane.leftAnchor="30" text="Controls:"/>
    <Label AnchorPane.topAnchor="120" AnchorPane.leftAnchor="30" text="Enter or tab: Jump"/>
    <Label AnchorPane.topAnchor="140" AnchorPane.leftAnchor="30" text="A: Increase Velocity Left"/>
    <Label AnchorPane.topAnchor="160" AnchorPane.leftAnchor="30" text="D: Increase Velocity Right"/>
    <Label AnchorPane.topAnchor="180" AnchorPane.leftAnchor="30" text="P: Pause (or Resume)"/>

</AnchorPane>